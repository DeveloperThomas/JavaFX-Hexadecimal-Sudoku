<AnchorPane id="background_small_login" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hexsudoku.LoginController">
   <children>
      <VBox layoutX="100.0" layoutY="110.0" prefHeight="180.0" prefWidth="400.0">
         <children>
            <HBox maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="427.0">
               <children>
                  <Label prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: grey;" text="Login" textFill="WHITE">
                     <font>
                        <Font name="SansSerif Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <TextField fx:id="login_username" prefHeight="40.0" prefWidth="260.0" promptText="Username" />
               </children>
            </HBox>
            <HBox maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="427.0">
               <children>
                  <Label prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: grey;" text="Password" textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="SansSerif Bold" size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <PasswordField fx:id="login_password" prefHeight="40.0" prefWidth="260.0" promptText="Password" />
               </children>
            </HBox>
            <BorderPane prefHeight="65.0" prefWidth="427.0">
               <right>
                  <Button fx:id="login_button_login" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#login" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: grey;" text="Login" textFill="WHITE" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="SansSerif Bold" size="14.0" />
                     </font>
                  </Button>
               </right>
               <left>
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startRegistration" prefHeight="32.0" prefWidth="147.0" style="-fx-background-color: grey;" text="Create an account" textFill="#9cf57f" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="SansSerif Bold" size="14.0" />
                     </font>
                  </Button>
               </left>
            </BorderPane>
         </children>
      </VBox>
      <Label fx:id="loginAlertLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="112.0" layoutY="292.0" prefHeight="40.0" prefWidth="400.0" textAlignment="CENTER" textFill="#f54242" />
      <Button fx:id="login_button_exit" alignment="CENTER" layoutX="22.0" layoutY="14.0" mnemonicParsing="false" onAction="#exitApplication" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: red;" text="X" textFill="WHITE">
         <font>
            <Font name="SansSerif Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
