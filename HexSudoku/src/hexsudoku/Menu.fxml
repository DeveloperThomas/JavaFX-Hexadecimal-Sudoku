<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="background_small_menu" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hexsudoku.MenuController">
   <children>
      <VBox layoutX="100.0" layoutY="57.0" prefHeight="279.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="74.0" prefWidth="400.0" style="-fx-background-color: black;" text="HexSudoku" textAlignment="CENTER" textFill="#8d2424">
               <font>
                  <Font name="Segoe UI Black" size="36.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefWidth="400.0" text="Choose diffuculty level and start the game!" textFill="WHITE">
               <font>
                  <Font name="SansSerif Regular" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <ChoiceBox fx:id="menuLevelSelection" prefHeight="43.0" prefWidth="400.0">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ChoiceBox>
            <BorderPane prefHeight="80.0" prefWidth="400.0">
               <right>
                  <Button fx:id="menuButtonPlay" mnemonicParsing="false" onAction="#startGame" prefHeight="40.0" prefWidth="100.0" text="Play" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="SansSerif Regular" size="18.0" />
                     </font>
                  </Button>
               </right>
               <left>
                  <Button fx:id="menuButtonLogout" mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="100.0" text="Logout" BorderPane.alignment="CENTER">
                     <font>
                        <Font name="SansSerif Regular" size="18.0" />
                     </font>
                  </Button>
               </left>
            </BorderPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
